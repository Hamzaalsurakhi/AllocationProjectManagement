@model PresentationLayer.ViewModel.LoginViewModel

@{
    Layout = "../Shared/AccountLayout.cshtml";
            ViewBag.Title = "Login";

}
<link href="~/css/ProjectColor.css" rel="stylesheet" />

<section class="p-3 p-md-4 p-xl-5 h-100">
    <div class="container h-100 d-flex align-items-center justify-content-center">
        <div class="card border-light-subtle border-3 shadow">
            <div class="row g-0">
                <div class="col-12 col-md-6 position-relative">
                    <div class="d-flex align-items-center justify-content-center h-100">
                        <div class="col-10 col-xl-8 py-3 text-center">
                            <a>
                                <img src="~/File/assets/NextTwo.JPG" class="img-fluid" alt="TPS Logo" loading="lazy" />
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-6">
                    <div class="card-body p-3 p-md-4 p-xl-5">
                        <div class="row">
                            <div class="col-12 text-center">
                                <div class="mb-2">
                                    <h3 class="fw-bold h1">Login</h3>
                                    <p class="text-secondary mb-0">Welcome back, Sign In to continue.</p>
                                </div>
                            </div>
                        </div>
                        <form asp-action="Login" class="pb-4 pt-4" asp-controller="Account" method="post">
                            <div class="row gy-3 gy-md-4 overflow-hidden">
                                <div class="col-12">
                                    <label class="form-label" asp-for="UserName">User Name</label>
                                    <input asp-for="UserName" class="form-control" />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="col-12">
                                    <label asp-for="Password" class="form-label"></label>
                                    <input asp-for="Password" class="form-control" type="password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="col-12">
                                    <div class="form-check">
                                        <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                                        <label asp-for="RememberMe" class="form-check-label text-secondary">
                                            Keep me logged in
                                        </label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="d-grid">
                                        <button class="btn bsb-btn-xl p-2 btn-primary" type="submit">Login</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section ScriptsAuth {
    <partial name="_ValidationScriptsPartial" />
}
